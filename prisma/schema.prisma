datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id           String    @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  username     String    @unique
  designation  String
  rank         String
  password     String
  role         String
  inbox        String[]
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  @@map("users")
}

model Department {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  name        String
  description String?
  employees   String[]
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("departments")
}

model Letter {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  subject      String
  reference    String
  priority     String
  fileLocation String
  drafts       String[]
  remarks      String[]
  uploadedBy   String   @db.ObjectId
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  scanners     Scanner[] @relation("LetterScanners")

  @@map("letters")
}

model Scanner {
  id             String     @id @default(auto()) @map("_id") @db.ObjectId
  letter         Letter     @relation("LetterScanners", fields: [letterId], references: [id])
  letterId       String     @db.ObjectId
  sendTo         String[]
  sendBy         String
  departmentId   String?    @db.ObjectId
  subject        String
  reference      String
  createdAt      DateTime   @default(now())
  updatedAt      DateTime   @updatedAt

  @@map("scanners")
}

model Draft {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  draft       String
  subject     String
  filePath    String
  attachment  String
  createdBy   String
  createdAt   DateTime @default(now())

  @@map("drafts")
}
